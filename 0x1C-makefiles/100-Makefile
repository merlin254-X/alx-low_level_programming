CC := gcc
SRC := main.c school.c
OBJ := main.o school.o
NAME := school
RM := rm -f
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(OBJ): $(SRC)
	$(CC) $(CFLAGS) -c $^

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
